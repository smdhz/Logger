<UserControl x:Class="Logger.Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10" FontSize="24">记录器在线</TextBlock>
        <TextBlock Margin="10,0">
            最后一条记录：<Run Text="{Binding LastLog.Time, Mode=OneWay}"/>
        </TextBlock>
        <TextBlock Margin="40,0" Text="{Binding LastLog.Fight}"/>
        <TextBlock Margin="40,0">
            <Run Text="{Binding LastLog.Area, Mode=OneWay}"/> <Run Text="{Binding LastLog.Enemy, Mode=OneWay}"/>
        </TextBlock>
        <TextBlock Margin="40,0">
            <Run Text="{Binding LastLog.Rank, Mode=OneWay}"/> 掉落：<Run Text="{Binding LastLog.Drop, Mode=OneWay}"/>
        </TextBlock>
    </StackPanel>
</UserControl>
